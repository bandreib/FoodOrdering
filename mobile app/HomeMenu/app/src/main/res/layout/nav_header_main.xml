    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/BGColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <TextView
